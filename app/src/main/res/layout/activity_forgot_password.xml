<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.login.ForgotPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_loginbg"
        android:padding="@dimen/_20sdp"
        >


        <EditText
            android:id="@+id/etEmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/primarystroke"
            android:drawableLeft="@drawable/ic_mail"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/dmsansregular"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/hintcolor"
            android:textSize="@dimen/_12ssp" />


        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/etEmailId"
            android:layout_marginBottom="@dimen/_15sdp"
            android:fontFamily="@font/dmsansregular"
            android:text="Enter your registered email below"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp" />


        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvWelcome"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/dmsansbold"
            android:text="Forgot Password"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_22ssp" />




        <TextView
            android:id="@+id/tvRememberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etEmailId"
            android:fontFamily="@font/dmsansregular"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="Remember the Password?"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/tvSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etEmailId"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_toRightOf="@id/tvRememberPassword"
            android:fontFamily="@font/dmsansregular"
            android:text="  Sign in"
            android:onClick="btnSigninClick"
            android:textColor="@color/colorred"
            android:textSize="@dimen/_10ssp" />


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRememberPassword"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/primaryround"
            android:fontFamily="@font/dmsansbold"
            android:onClick="btnSubmitClick"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />





    </RelativeLayout>
</layout>

